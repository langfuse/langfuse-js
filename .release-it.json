{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "hooks": {
    "before:init": ["pnpm clean", "pnpm install"],
    "before:release": ["pnpm build"],
    "after:release": [
      "pnpm -r publish --access public --no-git-checks --tag $tag --otp $otp"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "autoGenerate": true,
    "web": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["packages/*/package.json"]
    }
  }
}
