{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--access", "public"]
  },
  "hooks": {
    "before:init": ["pnpm clean", "pnpm install"],
    "before:release": ["pnpm build"],
    "after:release": ["echo '\nâœ… Packages published successfully to npm'"]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true,
    "web": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["packages/*/package.json"]
    }
  }
}
