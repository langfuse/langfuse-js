{
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [],
    "before:release": []
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "autoGenerate": true,
    "web": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["packages/*/package.json"]
    }
  },
  "ci": true
}
