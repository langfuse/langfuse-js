{
  "name": "langfuse-js",
  "version": "4.0.0-beta.2",
  "description": "Langfuse JavaScript / TypeScript SDK",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "docs": "pnpm build && typedoc --options ./typedoc.config.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "pnpm run build && vitest run --project=integration",
    "test:e2e": "pnpm run build && vitest run --project=e2e",
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "lint:fix": "eslint \"packages/*/src/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc -b --noEmit",
    "release": "tag=latest otp=$(op item get \"Npmjs\" --vault \"Engineering-Production\" --otp) release-it",
    "release:alpha": "tag=alpha otp=$(op item get \"Npmjs\" --vault \"Engineering-Production\" --otp) release-it --preRelease=alpha",
    "release:beta": "tag=beta otp=$(op item get \"Npmjs\" --vault \"Engineering-Production\" --otp) release-it --preRelease=beta",
    "release:rc": "tag=rc otp=$(op item get \"Npmjs\" --vault \"Engineering-Production\" --otp) release-it --preRelease=rc",
    "ci": "pnpm build && pnpm test && pnpm lint && pnpm typecheck && pnpm format:check",
    "clean": "pnpm -r run clean && rm -rf packages/*/dist && rm -f packages/*/tsconfig.tsbuildinfo",
    "nuke": "pnpm clean && rm -rf node_modules && rm -rf packages/*/node_modules && pnpm install",
    "prepare": "husky"
  },
  "author": "Langfuse",
  "license": "MIT",
  "devDependencies": {
    "@ai-sdk/anthropic": "^1",
    "@ai-sdk/openai": "^1",
    "@langchain/core": "^0.3.66",
    "@langchain/langgraph": "^0.4.1",
    "@langchain/openai": "^0.6.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/mustache": "^4.2.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "ai": "^4",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "happy-dom": "^15.10.2",
    "husky": "^9.1.7",
    "mustache": "^4.2.0",
    "nanoid": "^5.1.5",
    "openai": "^5.0.0",
    "prettier": "^3.2.5",
    "release-it": "^19.0.4",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.9",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=20"
  }
}
